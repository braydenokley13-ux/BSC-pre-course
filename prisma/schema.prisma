// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id             String    @id @default(cuid())
  title          String
  teacherKeyHash String
  status         String    @default("active")
  createdAt      DateTime  @default(now())
  archivedAt     DateTime?

  teams            Team[]
  students         Student[]
  votes            Vote[]
  missionProgress  MissionProgress[]
  catalogAttempts  CatalogAttempt[]
  finalSubmissions FinalSubmission[]
}

model Team {
  id             String    @id @default(cuid())
  sessionId      String
  session        Session   @relation(fields: [sessionId], references: [id])
  name           String
  joinCode       String    @unique
  missionIndex   Int       @default(0)
  badges         String    @default("[]")
  score          Int       @default(0)
  claimCode      String?
  completedAt    DateTime?
  lastProgressAt DateTime  @default(now())

  students         Student[]
  votes            Vote[]
  missionProgress  MissionProgress[]
  catalogAttempts  CatalogAttempt[]
  finalSubmissions FinalSubmission[]
}

model Student {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id])
  teamId     String
  team       Team     @relation(fields: [teamId], references: [id])
  nickname   String
  token      String   @unique
  joinedAt   DateTime @default(now())
  lastSeenAt DateTime @default(now())

  votes            Vote[]
  catalogAttempts  CatalogAttempt[]
  finalSubmissions FinalSubmission[]
}

model Vote {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id])
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  missionId   String
  optionIndex Int
  createdAt   DateTime @default(now())

  @@unique([teamId, missionId, studentId])
}

model MissionProgress {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id])
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  missionId   String
  outcome     Int
  stateJson   String
  completedAt DateTime @default(now())

  @@unique([teamId, missionId])
}

model CatalogAttempt {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id])
  teamId     String
  team       Team     @relation(fields: [teamId], references: [id])
  studentId  String
  student    Student  @relation(fields: [studentId], references: [id])
  conceptId  String
  q1Answer   Int
  q2Answer   Int
  q1Correct  Boolean
  q2Correct  Boolean
  passed     Boolean
  attemptNum Int      @default(1)
  createdAt  DateTime @default(now())
}

model FinalSubmission {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id])
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  claimCode   String
  validated   Boolean  @default(false)
  submittedAt DateTime @default(now())
}
