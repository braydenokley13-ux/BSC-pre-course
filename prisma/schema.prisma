// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Production-ready default: PostgreSQL (works on Vercel/Neon, Render, Railway, etc.)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id             String    @id @default(cuid())
  title          String
  teacherKeyHash String
  status         String    @default("active")
  track          String    @default("201")
  createdAt      DateTime  @default(now())
  archivedAt     DateTime?

  teams            Team[]
  students         Student[]
  votes            Vote[]
  missionProgress  MissionProgress[]
  catalogAttempts  CatalogAttempt[]
  adaptiveAssessments AdaptiveAssessment[]
  finalSubmissions FinalSubmission[]
  adminActionLogs  AdminActionLog[]
  teacherSessions  TeacherSession[]
  teamEvents       TeamEvent[]
}

model Team {
  id             String    @id @default(cuid())
  sessionId      String
  session        Session   @relation(fields: [sessionId], references: [id])
  name           String
  joinCode       String    @unique
  missionIndex   Int       @default(0)
  currentNodeId  String    @default("cap-crunch")
  branchStateJson String   @default("{\"capFlex\":0,\"starPower\":0,\"dataTrust\":0,\"culture\":0,\"riskHeat\":0}")
  runoffStateJson String?
  badges         String    @default("[]")
  color          String    @default("blue")
  score          Int       @default(0)
  claimCode      String?
  completedAt    DateTime?
  lastProgressAt DateTime  @default(now())
  teamStateVersion Int     @default(0)

  completedMissions  String  @default("[]")
  teamStatus         String  @default("[]")
  roleAssignments    String  @default("{}")
  missionRoundState  String  @default("{}")

  students         Student[]
  votes            Vote[]
  missionProgress  MissionProgress[]
  catalogAttempts  CatalogAttempt[]
  adaptiveAssessments AdaptiveAssessment[]
  finalSubmissions FinalSubmission[]
  adminActionLogs  AdminActionLog[]
  teamEvents       TeamEvent[]
}

model Student {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id])
  teamId     String
  team       Team     @relation(fields: [teamId], references: [id])
  nickname   String
  avatarId   String   @default("hawks")
  token      String   @unique
  recoveryCodeHash String?
  recoveryCodeUpdatedAt DateTime?
  joinedAt   DateTime @default(now())
  lastSeenAt DateTime @default(now())

  votes            Vote[]
  catalogAttempts  CatalogAttempt[]
  adaptiveAssessments AdaptiveAssessment[]
  finalSubmissions FinalSubmission[]
}

model Vote {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id])
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  missionId   String
  roundId     String   @default("final")
  optionIndex Int
  createdAt   DateTime @default(now())

  @@unique([teamId, missionId, studentId, roundId])
}

model MissionProgress {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id])
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  missionId   String
  outcome     Int
  stateJson   String
  completedAt DateTime @default(now())

  @@unique([teamId, missionId])
}

model CatalogAttempt {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id])
  teamId     String
  team       Team     @relation(fields: [teamId], references: [id])
  studentId  String
  student    Student  @relation(fields: [studentId], references: [id])
  conceptId  String
  q1Answer   Int
  q2Answer   Int
  q1Correct  Boolean
  q2Correct  Boolean
  passed     Boolean
  attemptNum Int      @default(1)
  createdAt  DateTime @default(now())
}

model FinalSubmission {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id])
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  claimCode   String
  validated   Boolean  @default(false)
  submittedAt DateTime @default(now())
}

model AdaptiveQuestion {
  id                     String   @id
  conceptId              String
  objectiveId            String
  difficultyLevel        Int
  stem                   String
  optionsJson            String
  correctIndex           Int
  misconceptionTagsJson  String
  explanationCorrect     String
  explanationRemediation String
  readingLevel           Float
  active                 Boolean  @default(true)
  version                Int      @default(1)
  source                 String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  responses AdaptiveResponse[]

  @@index([conceptId, difficultyLevel, active])
  @@index([conceptId, objectiveId, active])
}

model AdaptiveAssessment {
  id                     String   @id @default(cuid())
  sessionId              String
  session                Session  @relation(fields: [sessionId], references: [id])
  teamId                 String
  team                   Team     @relation(fields: [teamId], references: [id])
  studentId              String
  student                Student  @relation(fields: [studentId], references: [id])
  conceptId              String
  masteryScore           Float    @default(2.5)
  masteryTheta           Float    @default(0)
  uncertaintyScore       Float    @default(1)
  questionCount          Int      @default(0)
  band                   String?
  lowConfidence          Boolean  @default(false)
  usedQuestionIdsJson    String   @default("[]")
  objectiveCoverageJson  String   @default("{}")
  recentDifficultyTrailJson String @default("[]")
  conceptSessionSeed     String
  currentQuestionId      String?
  currentQuestionSequence Int     @default(1)
  startedAt              DateTime @default(now())
  completedAt            DateTime?

  responses AdaptiveResponse[]
  objectiveSnapshots AdaptiveObjectiveMasterySnapshot[]

  @@index([sessionId, conceptId, completedAt])
  @@index([teamId, conceptId, completedAt])
  @@index([studentId, conceptId, completedAt])
}

model AdaptiveResponse {
  id              String   @id @default(cuid())
  assessmentId    String
  assessment      AdaptiveAssessment @relation(fields: [assessmentId], references: [id])
  questionId      String
  question        AdaptiveQuestion @relation(fields: [questionId], references: [id])
  sequenceNum     Int
  selectedIndex   Int
  isCorrect       Boolean
  difficultyLevel Int
  objectiveId     String
  misconceptionTag String
  thetaBefore     Float
  thetaAfter      Float
  createdAt       DateTime @default(now())

  @@unique([assessmentId, sequenceNum])
  @@unique([assessmentId, questionId])
  @@index([assessmentId, questionId])
}

model AdaptiveObjectiveMasterySnapshot {
  id              String   @id @default(cuid())
  assessmentId    String
  assessment      AdaptiveAssessment @relation(fields: [assessmentId], references: [id])
  objectiveId     String
  askedCount      Int
  correctCount    Int
  missRate        Float
  uncertaintyRate Float
  createdAt       DateTime @default(now())

  @@index([assessmentId, objectiveId])
}

model AdminActionLog {
  id             String   @id @default(cuid())
  sessionId      String
  session        Session  @relation(fields: [sessionId], references: [id])
  teamId         String
  team           Team     @relation(fields: [teamId], references: [id])
  teacherIdOrKey String
  actionType     String
  payloadJson    String
  createdAt      DateTime @default(now())
  resultJson     String

  @@index([sessionId, createdAt])
  @@index([teamId, createdAt])
}

model TeacherSession {
  id        String   @id @default(cuid())
  sessionId String?
  session   Session? @relation(fields: [sessionId], references: [id])
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  revokedAt DateTime?

  @@index([expiresAt])
}

model TeamEvent {
  id          String   @id @default(cuid())
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id])
  eventType   String
  payloadJson String
  createdAt   DateTime @default(now())

  @@index([sessionId, createdAt])
  @@index([teamId, createdAt])
  @@index([eventType, createdAt])
}
